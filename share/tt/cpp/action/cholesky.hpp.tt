[% sig_action_static_matrix_function('simulate') %] {
  const int N = [% A.get_var.get_shape.get_size1 %];

  BOOST_AUTO(A, bi::reshape(bi::vector_as_column_matrix(pax.template fetch<Var[% A.get_var.get_id %]>(s, p)), N, N));
