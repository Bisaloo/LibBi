#!/usr/bin/env perl

=head1 NAME

bi - frontend to bi functionality.

=head1 SYNOPSIS

    bi I<options...>
    bi I<command> I<options...>

    bi @I<options_file>
    bi I<command> @I<options_file>

=head1 METHODS

=over 4

=cut

BEGIN {
	use FindBin qw($Bin);
	push(@INC, "$Bin/../src");
}

use warnings;
use strict;

use Bi::FrontEnd;

use Getopt::ArgvFile;

my $frontend = new Bi::FrontEnd;
$frontend->do;

=back

